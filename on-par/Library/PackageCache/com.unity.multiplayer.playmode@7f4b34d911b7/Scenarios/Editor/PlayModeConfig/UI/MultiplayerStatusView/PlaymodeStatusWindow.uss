@import url("../icons.uss");
#status-list{
}

#headline{
    -unity-font-style: bold;
    font-size: 12px;
    padding-left: 10px;
    margin-bottom: 10px;
    margin-top: 10px;
}

.headline-container{
    margin: 8px;
    padding-top: 4px;
    padding-bottom: 8px;
    margin-bottom: 8px;
    border-bottom-width: 1px;
    border-bottom-color: var(--unity-colors-default-border);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

#LogInfoIcon {
    background-image: var(--unity-icons-console_entry_info_small);
}

#LogWarningIcon {
    background-image: var(--unity-icons-console_entry_warn_small);
}

#LogErrorIcon {
    background-image: var(--unity-icons-console_entry_error_small);
}

.instance-view{
    padding-left: 8px;
    padding-right: 8px;
    flex-direction: row;
    justify-content: space-between;
}

.pin-button{
    margin-bottom: 10px;
}
.status-content-container{
    margin-bottom: 25px;

}

#instance-name{
    max-width: 200px;
    text-overflow: ellipsis;
    overflow: hidden;
}

#instance-icon{
    margin-right: 3px;
}

#status-container{
    min-width: 84px;
    align-self: flex-end;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

#instance-container{
    display: flex;
    justify-content: space-between;
}

#status-container > #status-indicator{
    margin-right: 3px;
}

.idle #status-indicator{
    background-image: var(--icon-idle);

}
.error #status-indicator{
    background-image: var(--icon-error);
}
.active #status-indicator{
    background-image: var(--icon-running);
}
.loading #status-indicator{
    background-image: var(--icon-loading);
}

#status-container > Label{
    align-self: flex-start;
    -unity-text-align: middle-left;
}

.dashboard-link{
    position: absolute;
    left: 45px;
    background-image: var(--icon-dashboard);

}

.config-button{
    align-self: flex-end;
}

.instance-content{
    display: flex;
    font-size: 12px;
    opacity: 0.75;
    margin-bottom: 5px;
}


.status-content-container {
    margin-top: 10px;
    justify-content: space-between;

}

.status-label-container{
    align-self: flex-end;
}
