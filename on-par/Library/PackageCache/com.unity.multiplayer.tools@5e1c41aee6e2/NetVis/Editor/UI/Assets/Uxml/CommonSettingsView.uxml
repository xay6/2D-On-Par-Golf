<ui:UXML xmlns:ui="UnityEngine.UIElements"
         xmlns:uie="UnityEditor.UIElements"
         xmlns:nv="Unity.Multiplayer.Tools.NetVis.Editor.UI"
         editor-extension-mode="True">
    <Style src="../Uss/NetVisGlobal.uss" />
    <ui:VisualElement>
        <ui:VisualElement>
            <ui:Toggle
                name="Outline"
                label="Outline"
                tooltip="Display a black outline around networked objects to make them stand out in the scene, and to help distinguish between overlapping networked objects with a similar highlight color."
            />
            <ui:SliderInt
                name="Saturation"
                label="Saturation (%)"
                show-input-field="true"
                high-value="100"
                tooltip="Control the saturation of non-networked objects in the scene from 0 for grayscale and to 100 for full color, helping networked objects stand out."
            />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
