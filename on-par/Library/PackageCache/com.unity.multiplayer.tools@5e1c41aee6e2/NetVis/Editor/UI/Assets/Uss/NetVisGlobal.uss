.NetVisPanelOverlayButton {
    margin-bottom: 2px;
    padding-top: 0px;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-grow: 1;
}
.NetVisPanelOverlayButton .unity-toggle__input {
    /* Suppress the input sub-element of the ToolbarToggle created by UITK. Otherwise it takes up all the space */
    /* and forces the icon and the text all the way to the right */
    display: none;
}
.NetVisPanelOverlayButton .NetVisIcon {
    width: 16px;
    height: 16px;
    margin-right: 4px;
}

#FillContainer {
    flex-direction: row;
}

#FillContainer #MeshShadingFill {
    flex-grow: 1;
    flex-shrink: 0;
}

#FillContainer .unity-integer-field {
    width: 20%;
    max-width: 52px;
    margin: 2px 1px 2px 1px;
}

MeshShadingGradientPicker {
    padding: 2px;
}

MeshShadingGradientPicker MeshShadingFillGradientField {
    height: 22px;
    margin-bottom: 5px;
    width: 248px;
}

MeshShadingFillDropdown:hover,
MeshShadingFillGradientField:hover {
    background-color: rgba(255, 255, 255, 0.25);
}

MeshShadingFillDropdown:hover .unity-gradient-field__content,
MeshShadingFillGradientField:hover .unity-gradient-field__content {
    opacity: 0.8;
}

#MeshShadingFill .unity-base-popup-field__arrow {
    max-width: 10px;
    flex-grow: 1;
}

#MeshShadingFill #hover {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0);
}

#MeshShadingFill Button {
    margin: 0 0 0 -10px;
}

.toggleable-foldout {
    display: flex;
    flex-direction: row;
}

.toggleable-foldout > Toggle {
    align-items: flex-start;
}

.toggleable-foldout > Foldout {
    flex-grow: 1;
}

#BandwidthScaleLegend {
    font-size: 10px;
    flex-direction: row;
    justify-content: space-between;
    height: 16px;
    flex-grow: 1;
}

#BandwidthScaleLegend Label {
    margin: 0;
    padding: 0;
    opacity: 0.75;
}

#BandwidthRangeComponents {
    display: flex;
    flex-direction: row;
}

#BandwidthRangeComponents > MinMaxSlider {
    flex-grow: 1;
}

#BandwidthRangeComponents > Label {
    width: 36px;
}
